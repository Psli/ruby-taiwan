<% if replies.blank? %>
  <div class="no_result">
    <%= t("topics.no_replies")%>
  </div>
<% else %>
<div id="replies" class="box">
  <div class="total">
    <%= t("common.until")%> <%= render_topic_last_be_replied_time(topic) %>, 共收到 <%= render_topic_count(topic) %> 条回复
  </div>
  <% replies.each_with_index do |reply,i| %>
    <%= render "reply", :item => reply, :i => i %>
  <% end %>
</div>
<% end %>