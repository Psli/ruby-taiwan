<div class="infos">
        <h1><%= truncate(topic.title, :length => 100) %></h1>
        <div class="info leader">
            由 <%= user_name_tag(topic.user) %>
            在 <%= render_node_name(topic.node) %> 节点中发起
        </div>
        <div class="info time">
            <% if topic.last_reply_user.blank? %>
                <%= t("common.created_at")%> <%= render_topic_created_at(topic) %>
            <% else %>
                <%= t("common.last_by")%> <%= user_name_tag(topic.last_reply_user) %> 回复于 <%= render_topic_last_be_replied_time(topic) %>
            <% end %>
            , <%= topic.hits %>次阅读
        </div>
    </div>            
</div>